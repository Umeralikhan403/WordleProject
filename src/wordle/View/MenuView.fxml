<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="620.0" prefWidth="685.0"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="wordle.Controller.MenuController"
    style="-fx-background-color: white;">
    
    <top>
        <VBox>
            <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;">          
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <Button fx:id="btnCloseMenu" 
                        mnemonicParsing="false" 
                        onAction="#closeMenuHandler"
                        prefHeight="33.0" 
                        prefWidth="33.0"
                        style="-fx-background-color: #F4F4F4; -fx-border-color: #000000; -fx-border-radius: 20px;"
                        text="X">
                        <font>
                            <Font name="Futura Bold" size="18.0" />
                        </font>
                    </Button>
                </HBox>
                
                
                <HBox alignment="CENTER_RIGHT">
                    <Label fx:id="helloLabel" 
                        style="-fx-font-size: 18; -fx-font-weight: bold;"
                        text="Hello, Player!" />
                </HBox>
            </HBox>
            
            <!-- Menu Title -->
            <Label fx:id="lblMenu" 
                alignment="CENTER"
                prefHeight="44.0" 
                text="MENU" 
                textAlignment="CENTER"
                style="-fx-alignment: center;"
                maxWidth="Infinity">
                <font>
                    <Font name="Futura Bold" size="36.0" />
                </font>
            </Label>
            
            <!-- Divider Line -->
             <HBox alignment="CENTER">
                <Line 
                    startX="0" 
                    endX="480" 
                    strokeWidth="3.0" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox fx:id="menuBox" 
            alignment="TOP_CENTER"
            spacing="20.0" 
            style="-fx-padding: 30 0 0 0;">
            <Button fx:id="btnViewScores" 
                mnemonicParsing="false" 
                onAction="#viewScoresHandler"
                prefHeight="40.0" 
                prefWidth="180.0"
                style="-fx-background-color: #F4F4F4;" 
                text="View Scores">
                <font>
                    <Font name="Futura Medium" size="20.0" />
                </font>
            </Button>
            
            <Button fx:id="btnResetScores" 
                mnemonicParsing="false" 
                onAction="#resetScoresHandler"
                prefHeight="40.0" 
                prefWidth="180.0"
                style="-fx-background-color: #F4F4F4;" 
                text="Reset Scores">
                <font>
                    <Font name="Futura Medium" size="20.0" />
                </font>
            </Button>
            
            <Button fx:id="btnSignOut" 
                mnemonicParsing="false" 
                onAction="#signOutHandler"
                prefHeight="40.0" 
                prefWidth="180.0"
                style="-fx-background-color: #F4F4F4;" 
                text="Sign Out">
                <font>
                    <Font name="Futura Medium" size="20.0" />
                </font>
            </Button>
            
            <Button fx:id="btnQuit" 
                mnemonicParsing="false" 
                onAction="#menuQuitHandler"
                prefHeight="40.0" 
                prefWidth="180.0"
                style="-fx-background-color: #F4F4F4;" 
                text="Quit Game">
                <font>
                    <Font name="Futura Medium" size="20.0" />
                </font>
            </Button>
        </VBox>
    </center>
</BorderPane>