<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="wordle.Controller.StatisticsController">

  <!-- Main container anchors to all sides -->
  <VBox spacing="15.0"
        AnchorPane.topAnchor="10"
        AnchorPane.leftAnchor="10"
        AnchorPane.rightAnchor="10"
        AnchorPane.bottomAnchor="10">
    <padding>
      <Insets top="10" right="10" bottom="20" left="10" />
    </padding>

    <!-- Top bar: title on left, back on right -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">
      <Label text="Player Statistics"
             style="-fx-font-size: 24; -fx-font-weight: bold;" />
      <Region HBox.hgrow="ALWAYS" />
      <Button text="← Back"
              style="-fx-font-weight: bold;"
              onAction="#handleBack" />
    </HBox>

    <!-- Summary grid with percentage-based columns -->
    <GridPane hgap="10" vgap="10">
      <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      </rowConstraints>

      <Label text="Total Score:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <Label fx:id="totalScoreLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

      <Label text="High Score:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
      <Label fx:id="highScoreLabel" GridPane.columnIndex="3" GridPane.rowIndex="0" />

      <Label text="Average Score:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <Label fx:id="averageScoreLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

      <Label text="Games Played:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <Label fx:id="gamesPlayedLabel" GridPane.columnIndex="3" GridPane.rowIndex="1" />

      <Label text="Win %:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <Label fx:id="winPercentageLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>

    <!-- Chart and table share available space -->
    <HBox spacing="20.0" VBox.vgrow="ALWAYS">
      <PieChart fx:id="winLossPieChart"
                title="Win / Loss Ratio"
                HBox.hgrow="ALWAYS" />

      <TableView fx:id="winsTable" HBox.hgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="wordColumn" text="Word" />
          <TableColumn fx:id="attemptsColumn" text="Attempts" />
          <TableColumn fx:id="scoreColumn" text="Score" />
        </columns>
      </TableView>
    </HBox>
  </VBox>
</AnchorPane>
