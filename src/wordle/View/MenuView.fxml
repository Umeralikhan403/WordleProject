<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<VBox fx:id="box" prefHeight="611.0" prefWidth="506.0"
	xmlns="http://javafx.com/javafx/23.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="wordle.Controller.MenuController">
	<children>
		<AnchorPane maxHeight="-1.0" maxWidth="-1.0"
			prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
			<children>
				<Label fx:id="lblMenu" alignment="CENTER" layoutX="137.0"
					layoutY="22.0" prefHeight="44.0" prefWidth="366.0" style="&#10;"
					text="MENU" textAlignment="CENTER" wrapText="false">
					<font>
						<Font name="Futura Bold" size="36.0" />
					</font>
				</Label>
				<Button fx:id="btnCloseMenu" layoutX="14.0" layoutY="26.0"
					mnemonicParsing="false" onAction="#closeMenuHandler"
					prefHeight="33.0" prefWidth="33.0"
					style="-fx-background-color: #F4F4F4; -fx-border-color: #000000; -fx-border-radius: 20px;"
					text="X">
					<font>
						<Font name="Futura Bold" size="18.0" />
					</font>
				</Button>
				<Line endX="539.0" layoutX="101.0" layoutY="71.0"
					startX="-100.0" strokeWidth="3.0" />
				<VBox fx:id="menuBox" layoutX="25.0" layoutY="100.0"
					prefHeight="200.0" prefWidth="591.0" spacing="20.0">
					<children>
						<Button fx:id="btnViewScores" alignment="TOP_LEFT"
							mnemonicParsing="false" onAction="#viewScoresHandler"
							prefHeight="40.0" prefWidth="180.0"
							style="-fx-background-color: #F4F4F4;" text="View Scores">
							<font>
								<Font name="Futura Medium" size="20.0" />
							</font>
						</Button>
						<Button fx:id="btnResetScores" alignment="TOP_LEFT"
							mnemonicParsing="false" onAction="#resetScoresHandler"
							prefHeight="40.0" prefWidth="180.0"
							style="-fx-background-color: #F4F4F4;" text="Reset Scores">
							<font>
								<Font name="Futura Medium" size="20.0" />
							</font>
						</Button>
						<Button fx:id="btnSignOut" alignment="TOP_LEFT"
							mnemonicParsing="false" onAction="#signOutHandler"
							prefHeight="40.0" prefWidth="180.0"
							style="-fx-background-color: #F4F4F4;" text="Sign Out">
							<font>
								<Font name="Futura Medium" size="20.0" />
							</font>
						</Button>
						<Button fx:id="btnQuit" alignment="TOP_LEFT"
							mnemonicParsing="false" onAction="#menuQuitHandler"
							prefHeight="40.0" prefWidth="180.0"
							style="-fx-background-color: #F4F4F4;" text="Quit Game">
							<font>
								<Font name="Futura Medium" size="20.0" />
							</font>
						</Button>
					</children>
				</VBox>
			</children>
		</AnchorPane>
	</children>
</VBox>
